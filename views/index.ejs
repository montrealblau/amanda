<body>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <h1>Dining, <span class="highlight">Redefined</span></h1>
        <p class="hero-subtitle">Scan QR Codes to Order and Pay Instantly</p>
        <div class="hero-buttons">
          <a href="#" id="auth-icon" class="btn btn-primary">Login</a>
          <a href="#features" class="btn btn-secondary">Learn More</a>
        </div>
      </div>
      <div class="hero-image">
        <img src="/images/hero.png" alt="QR Menu App" onerror="this.src='data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22600%22%20height%3D%22400%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Crect%20width%3D%22600%22%20height%3D%22400%22%20fill%3D%22%23f0f0f0%22%2F%3E%3Ctext%20x%3D%22300%22%20y%3D%22200%22%20font-family%3D%22Arial%22%20font-size%3D%2224%22%20fill%3D%22%23666%22%20text-anchor%3D%22middle%22%20dominant-baseline%3D%22middle%22%3EQR%20Menu%20App%3C%2Ftext%3E%3C%2Fsvg%3E'">
      </div>
    </div>
  </section>

  <!-- Auth Modal -->
  <dialog id="auth-modal" class="auth-dialog">
    <article>
      <a href="#" class="close">×</a>
      <div id="login-form">
        <h2>Login</h2>
        <form action="/login" method="POST">
          <input type="text" name="username" placeholder="Username" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit">Login</button>
        </form>
        <p>Not a member? <a href="#" id="switch-to-register">Register here</a></p>
      </div>
      <div id="register-form" style="display: none;">
        <h2>Register</h2>
        <form action="/register" method="POST">
          <input type="text" name="username" placeholder="Username" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit">Register</button>
        </form>
        <p>Already have an account? <a href="#" id="switch-to-login">Login here</a></p>
      </div>
    </article>
  </dialog>

  <!-- Features Section -->
  <section id="features" class="features-section">
    <div class="container">
      <h2 class="section-title">Key <span class="highlight">Features</span></h2>
      <div class="feature-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-qrcode"></i>
          </div>
          <h3>Fast QR Scanning</h3>
          <p>Quick and reliable QR code scanning for seamless ordering.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-table"></i>
          </div>
          <h3>Table Management</h3>
          <p>Efficiently manage table assignments and orders.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-credit-card"></i>
          </div>
          <h3>Easy Payments</h3>
          <p>Secure and convenient payment options for customers.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="how-it-works-section">
    <div class="container">
      <h2 class="section-title">How It <span class="highlight">Works</span></h2>
      <div class="steps-container">
        <div class="step">
          <div class="step-number">1</div>
          <div class="step-icon">
            <i class="fas fa-qrcode"></i>
          </div>
          <h3>Scan the Code</h3>
          <p>Use your phone to scan the QR code at your table.</p>
        </div>
        <div class="step-connector"></div>
        <div class="step">
          <div class="step-number">2</div>
          <div class="step-icon">
            <i class="fas fa-utensils"></i>
          </div>
          <h3>Order Your Meal</h3>
          <p>Browse the menu and place your order directly from your device.</p>
        </div>
        <div class="step-connector"></div>
        <div class="step">
          <div class="step-number">3</div>
          <div class="step-icon">
            <i class="fas fa-credit-card"></i>
          </div>
          <h3>Pay and Go</h3>
          <p>Pay securely through the app and enjoy your meal.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="testimonials-section">
    <div class="container">
      <h2 class="section-title">What Our <span class="highlight">Customers</span> Say</h2>
      <div class="testimonial-grid">
        <div class="testimonial-card">
          <div class="testimonial-content">
            <i class="fas fa-quote-left"></i>
            <p>"Order times dropped by 25%, and customers love the convenience!"</p>
          </div>
          <div class="testimonial-author">
            <div class="author-avatar">
              <i class="fas fa-user-circle"></i>
            </div>
            <div class="author-info">
              <p class="author-name"><strong>Sarah Lee</strong></p>
              <p class="author-title">Lee's Bistro</p>
            </div>
          </div>
        </div>
        <div class="testimonial-card">
          <div class="testimonial-content">
            <i class="fas fa-quote-left"></i>
            <p>"The upselling feature paid for the app in the first month. Highly recommend!"</p>
          </div>
          <div class="testimonial-author">
            <div class="author-avatar">
              <i class="fas fa-user-circle"></i>
            </div>
            <div class="author-info">
              <p class="author-name"><strong>Mark Patel</strong></p>
              <p class="author-title">Patel's Grill</p>
            </div>
          </div>
        </div>
        <div class="testimonial-card">
          <div class="testimonial-content">
            <i class="fas fa-quote-left"></i>
            <p>"Our staff workload decreased, and sales went up—amazing tool!"</p>
          </div>
          <div class="testimonial-author">
            <div class="author-avatar">
              <i class="fas fa-user-circle"></i>
            </div>
            <div class="author-info">
              <p class="author-name"><strong>Emma Chen</strong></p>
              <p class="author-title">Chen's Noodle House</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="pricing-section">
    <div class="container">
      <h2 class="section-title">Choose Your <span class="highlight">Plan</span></h2>
      <p class="section-subtitle">Select the perfect plan for your restaurant</p>
      <div class="pricing-grid">
        <div class="pricing-card">
          <div class="pricing-header">
            <h3>Freemium</h3>
            <div class="price">
              <span class="currency">$</span>
              <span class="amount">0</span>
              <span class="period">/month</span>
            </div>
          </div>
          <div class="pricing-features">
            <ul>
              <li><i class="fas fa-check"></i> All core features</li>
              <li><i class="fas fa-check"></i> Up to 1000 orders</li>
              <li><i class="fas fa-check"></i> Basic menu customization</li>
              <li><i class="fas fa-check"></i> QR code generation</li>
              <li><i class="fas fa-check"></i> Table management</li>
              <li><i class="fas fa-times"></i> Payment processing</li>
            </ul>
          </div>
          <div class="pricing-action">
            <a href="#" class="btn btn-secondary">Get Started</a>
          </div>
        </div>
        <div class="pricing-card featured">
          <div class="pricing-header">
            <h3>Standard</h3>
            <div class="price">
              <span class="currency">$</span>
              <span class="amount">49</span>
