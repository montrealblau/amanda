<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <!-- Pico CSS CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Google Fonts: Inter -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
    header nav {
      background: #2d3748;
      color: white;
      padding: 1rem;
    }
    header nav a {
      color: white;
      margin-right: 1rem;
    }
    .hero {
      background: linear-gradient(135deg, #6b48ff, #00d4ff);
      color: white;
      padding: 3rem 1rem;
      text-align: center;
    }
    .hero button {
      background: #ffffff;
      color: #6b48ff;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 0.25rem;
      cursor: pointer;
    }
    .hero button:hover {
      background: #e6e6e6;
    }
    section {
      padding: 2rem 1rem;
    }
    #features, #pricing, #contact {
      max-width: 1200px;
      margin: 0 auto;
    }
    .benefit-grid, .pricing-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }
    .benefit-grid article, .pricing-grid article {
      background: #f7fafc;
      padding: 1rem;
      border-radius: 0.25rem;
    }
    .pricing-grid article.popular {
      background: #e6fffa;
      border: 2px solid #4fd1c5;
      position: relative;
    }
    .pricing-grid article.popular::after {
      content: "Most Popular";
      position: absolute;
      top: 0.5rem;
      right: 0.5rem;
      background: #4fd1c5;
      color: white;
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
    }
    .testimonials {
      max-width: 800px;
      margin: 0 auto;
      position: relative;
    }
    .carousel-inner article {
      display: none;
      text-align: center;
    }
    .carousel-inner article.active {
      display: block;
    }
    .testimonial-img {
      max-width: 100px;
      border-radius: 50%;
    }
    .carousel-prev, .carousel-next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
    }
    .carousel-prev {
      left: -2rem;
    }
    .carousel-next {
      right: -2rem;
    }
    footer {
      background: #2d3748;
      color: white;
      padding: 1rem;
      text-align: center;
    }
    footer a {
      color: #a0aec0;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="#features">Features</a>
      <a href="#pricing">Pricing</a>
      <a href="#contact">Contact</a>
      <a href="#" id="auth-icon"><i class="fas fa-user"></i></a>
    </nav>
  </header>

  <!-- Auth Modal -->
  <dialog id="auth-modal">
    <article>
      <a href="#" class="close">×</a>
      <div id="login-form">
        <h2>Login</h2>
        <form action="/login" method="POST">
          <input type="text" name="username" placeholder="Username" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit">Login</button>
        </form>
        <p>Not a member? <a href="#" id="switch-to-register">Register here</a></p>
      </div>
      <div id="register-form" style="display: none;">
        <h2>Register</h2>
        <form action="/register" method="POST">
          <input type="text" name="username" placeholder="Username" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit">Register</button>
        </form>
        <p>Already have an account? <a href="#" id="switch-to-login">Login here</a></p>
      </div>
    </article>
  </dialog>

  <!-- Hero Section -->
  <section class="hero">
    <h1>Revolutionize Your Restaurant with Our QR Code Menu App</h1>
    <p>Speed up orders, delight customers, and boost profits with a modern, all-in-one digital menu solution.</p>
    <button onclick="document.getElementById('order-form').scrollIntoView()">Get Started Now</button>
  </section>

  <!-- Features Section -->
  <section id="features">
    <h2>Why Choose Our QR Code Menu App?</h2>
    <div class="benefit-grid">
      <% ['Faster Order Processing', 'Reduced Server Workload', 'Personalized Experience', 'Upselling & Cross-Selling', 'Loyalty Integration', 'Competitive Advantage', 'Better Engagement'].forEach((title, index) => { %>
        <article>
          <h3><%= title %></h3>
          <p><%= ['Speeds up service and boosts table turnover with instant smartphone ordering.', 'Frees staff to focus on customer service, not order-taking.', 'Customizes dining with saved preferences and order history.', 'Increases revenue with easy add-on suggestions.', 'Encourages repeat business with seamless rewards.', 'Differentiates your restaurant with cutting-edge tech.', 'Enhances interaction via digital menus and offers.'][index] %></p>
        </article>
      <% }) %>
    </div>
  </section>

  <!-- Guarantees Section -->
  <section>
    <h2>Our Promise to You</h2>
    <p>Try it risk-free with our <strong>30-day money-back guarantee</strong>. If it doesn’t transform your restaurant, we’ll refund you—no questions asked.</p>
  </section>

  <!-- Pricing Section -->
  <section id="pricing">
    <h2>Pricing Plans</h2>
    <div class="pricing-grid">
      <article>
        <h3>Basic</h3>
        <p>$49/month</p>
        <ul>
          <li>Core QR menu features</li>
          <li>Perfect for small restaurants</li>
        </ul>
        <button onclick="document.getElementById('order-form').scrollIntoView()">Choose Basic</button>
      </article>
      <article class="popular">
        <h3>Pro</h3>
        <p>$99/month</p>
        <ul>
          <li>All Basic features</li>
          <li>Loyalty programs</li>
          <li>Upselling tools</li>
        </ul>
        <button onclick="document.getElementById('order-form').scrollIntoView()">Choose Pro</button>
      </article>
      <article>
        <h3>Enterprise</h3>
        <p>Custom Pricing</p>
        <ul>
          <li>All Pro features</li>
          <li>For chains or large venues</li>
        </ul>
        <button onclick="document.getElementById('order-form').scrollIntoView()">Contact Us</button>
      </article>
    </div>
    <p>Save 20% with annual billing!</p>
  </section>

  <!-- Testimonials Section -->
  <section class="testimonials">
    <h2>What Restaurants Are Saying</h2>
    <div class="testimonial-carousel">
      <div class="carousel-inner">
        <% [{name: 'Sarah Lee', company: 'Lee’s Bistro', text: 'Order times dropped by 25%, and customers love the convenience!', img: '/images/testimonial1.jpg'},
            {name: 'Mark Patel', company: 'Patel’s Grill', text: 'The upselling feature paid for the app in the first month. Highly recommend!', img: '/images/testimonial2.jpg'},
            {name: 'Emma Chen', company: 'Chen’s Noodle House', text: 'Our staff workload decreased, and sales went up—amazing tool!', img: '/images/testimonial3.jpg'},
            {name: 'Carlos Rivera', company: 'Rivera’s Tacos', text: 'Customers keep coming back thanks to the loyalty integration.', img: '/images/testimonial4.jpg'},
            {name: 'Lisa Kim', company: 'Kim’s Sushi Bar', text: 'A game-changer for customer engagement and efficiency!', img: '/images/testimonial5.jpg'},
            {name: 'James Carter', company: 'Carter’s BBQ', text: 'The QR menus gave us a modern edge over competitors.', img: '/images/testimonial6.jpg'},
            {name: 'Aisha Khan', company: 'Khan’s Curry Corner', text: 'Easy to use and increased our table turnover significantly.', img: '/images/testimonial7.jpg'},
            {name: 'Tom Nguyen', company: 'Nguyen’s Pho Shop', text: 'Personalized orders boosted customer satisfaction through the roof!', img: '/images/testimonial8.jpg'},
            {name: 'Sophie Dubois', company: 'Dubois Café', text: 'A must-have for any restaurant looking to modernize.', img: '/images/testimonial9.jpg'},
            {name: 'Raj Patel', company: 'Patel’s Sweets', text: 'Cross-selling options doubled our dessert sales!', img: '/images/testimonial10.jpg'}].forEach((t, i) => { %>
          <article class="testimonial <%= i === 0 ? 'active' : '' %>">
            <img src="<%= t.img %>" alt="<%= t.name %>" class="testimonial-img">
            <p><em>“<%= t.text %>”</em></p>
            <p><strong><%= t.name %></strong></p>
            <p><%= t.company %></p>
          </article>
        <% }) %>
      </div>
      <button class="carousel-prev"><i class="fas fa-chevron-left"></i></button>
      <button class="carousel-next"><i class="fas fa-chevron-right"></i></button>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact">
    <h2>Get Started Today</h2>
    <form id="order-form" action="/submit-request" method="POST">
      <input type="text" name="restaurantName" placeholder="Restaurant Name" required>
      <input type="text" name="contactName" placeholder="Contact Name" required>
      <input type="email" name="email" placeholder="Email" required>
      <input type="tel" name="phone" placeholder="Phone" required>
      <select name="plan">
        <option value="basic">Basic</option>
        <option value="premium">Premium</option>
      </select>
      <textarea name="message" placeholder="Message"></textarea>
      <button type="submit">Submit</button>
    </form>
  </section>

  <!-- Footer -->
  <footer>
    <p>© 2025 QR Menu App. All rights reserved. | <a href="/privacy-policy">Privacy Policy</a> | <a href="#" id="support-link">Support</a></p>
    <dialog id="support-modal">
      <article>
        <a href="#" class="close">×</a>
        <p>For all support issues, please email <a href="mailto:info@qr-table.com">info@qr-table.com</a></p>
      </article>
    </dialog>
  </footer>

  <!-- JavaScript -->
  <script>
    // Auth Modal Logic
    const authIcon = document.getElementById('auth-icon');
    const authModal = document.getElementById('auth-modal');
    const authCloseBtn = document.querySelector('#auth-modal .close');
    const switchToRegister = document.getElementById('switch-to-register');
    const switchToLogin = document.getElementById('switch-to-login');
    const loginForm = document.getElementById('login-form');
    const registerForm = document.getElementById('register-form');

    authIcon.addEventListener('click', (e) => {
      e.preventDefault();
      authModal.showModal();
      loginForm.style.display = 'block';
      registerForm.style.display = 'none';
    });

    authCloseBtn.addEventListener('click', (e) => {
      e.preventDefault();
      authModal.close();
    });

    switchToRegister.addEventListener('click', (e) => {
      e.preventDefault();
      loginForm.style.display = 'none';
      registerForm.style.display = 'block';
    });

    switchToLogin.addEventListener('click', (e) => {
      e.preventDefault();
      loginForm.style.display = 'block';
      registerForm.style.display = 'none';
    });

    // Support Modal Logic
    const supportLink = document.getElementById('support-link');
    const supportModal = document.getElementById('support-modal');
    const supportCloseBtn = document.querySelector('#support-modal .close');

    supportLink.addEventListener('click', (e) => {
      e.preventDefault();
      supportModal.showModal();
    });

    supportCloseBtn.addEventListener('click', (e) => {
      e.preventDefault();
      supportModal.close();
    });

    // Carousel Logic
    const carouselInner = document.querySelector('.carousel-inner');
    const testimonials = document.querySelectorAll('.testimonial');
    const prevBtn = document.querySelector('.carousel-prev');
    const nextBtn = document.querySelector('.carousel-next');
    let currentIndex = 0;

    function updateCarousel() {
      testimonials.forEach((testimonial, index) => {
        testimonial.classList.remove('active');
        if (index === currentIndex) {
          testimonial.classList.add('active');
        }
      });
    }

    prevBtn.addEventListener('click', () => {
      currentIndex = (currentIndex - 1 + testimonials.length) % testimonials.length;
      updateCarousel();
    });

    nextBtn.addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % testimonials.length;
      updateCarousel();
    });

    setInterval(() => {
      currentIndex = (currentIndex + 1) % testimonials.length;
      updateCarousel();
    }, 5000);

    updateCarousel();
  </script>
</body>
</html>