<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <!-- Pico CSS CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Google Fonts: Inter -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }

    /* Hero Section with Auth Icon */
    .hero {
      position: relative;
      background: linear-gradient(135deg, #008080, #ffffff);
      padding: 4rem 1rem;
      text-align: center;
      color: #333;
    }
    .hero h1 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    .hero p {
      font-size: 1.25rem;
      margin-bottom: 2rem;
    }
    .hero button {
      background: #ff6b6b;
      color: white;
      border: none;
      padding: 1rem 2rem;
      border-radius: 50px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }
    .hero button:hover {
      background: #ff8787;
      transform: scale(1.05);
    }
    .auth-icon {
      position: absolute;
      top: 1rem;
      right: 1rem;
      color: #333;
      font-size: 1.5rem;
      cursor: pointer;
    }

    /* Features Section */
    #features {
      text-align: center;
      padding: 4rem 1rem;
      background: #f9f9f9;
    }
    #features h2 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }
    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }
    .feature-grid article {
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .feature-grid article:hover {
      transform: translateY(-10px);
    }
    .feature-grid i {
      color: #008080;
      margin-bottom: 1rem;
    }
    .feature-grid h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }
    .feature-grid p {
      font-size: 1rem;
      color: #666;
    }

    /* How It Works Section */
    #how-it-works {
      text-align: center;
      padding: 4rem 1rem;
    }
    #how-it-works h2 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }
    .steps-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }
    .steps-grid article {
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .steps-grid article:hover {
      transform: translateY(-10px);
    }
    .steps-grid i {
      color: #ff6b6b;
      margin-bottom: 1rem;
    }
    .steps-grid h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }
    .steps-grid p {
      font-size: 1rem;
      color: #666;
    }

    /* Testimonials Section (Styled like Features) */
    #testimonials {
      text-align: center;
      padding: 4rem 1rem;
      background: #f9f9f9;
    }
    #testimonials h2 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }
    .testimonial-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }
    .testimonial-grid article {
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .testimonial-grid article:hover {
      transform: translateY(-10px);
    }
    .testimonial-grid p {
      font-size: 1rem;
      color: #333;
      font-style: italic;
      margin-bottom: 1rem;
    }
    .testimonial-grid strong {
      font-size: 1rem;
      color: #666;
    }

    /* Contact Form Section */
    #contact-form {
      text-align: center;
      padding: 4rem 1rem;
      background: #ffffff;
    }
    #contact-form h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }
    #contact-form p {
      font-size: 1.25rem;
      margin-bottom: 2rem;
      color: #666;
    }
    #contact-form form {
      max-width: 600px;
      margin: 0 auto;
      background: #f9f9f9;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    #contact-form input, #contact-form textarea {
      width: 100%;
      margin-bottom: 1rem;
    }
    #contact-form button {
      background: #ff6b6b;
      color: white;
      border: none;
      padding: 1rem 2rem;
      border-radius: 50px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    #contact-form button:hover {
      background: #ff8787;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }
      .hero p {
        font-size: 1rem;
      }
      .auth-icon {
        font-size: 1.2rem;
        top: 0.5rem;
        right: 0.5rem;
      }
    }
/* Auth Dialog Styling */
.auth-dialog article {
  background: #f9f9f9; /* Matches contact form background */
  padding: 2rem; /* Matches contact form padding */
  border-radius: 10px; /* Matches contact form radius */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Matches contact form shadow */
  max-width: 400px;
  margin: 0 auto;
  position: relative; /* Ensures close button positions correctly */
}
.auth-dialog h2 {
  font-size: 1.75rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
  text-align: center;
}
.auth-dialog input {
  width: 100%;
  padding: 0.75rem;
  margin-bottom: 1rem;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 1rem;
}
.auth-dialog input:focus {
  border-color: #ff6b6b;
  outline: none;
}
.auth-dialog button {
  width: 100%;
  background: #ff6b6b; /* Matches website button color */
  color: white;
  border: none;
  padding: 1rem;
  border-radius: 50px; /* Matches website button style */
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s ease;
}
.auth-dialog button:hover {
  background: #ff8787; /* Lighter coral on hover */
}
.auth-dialog p {
  text-align: center;
  margin-top: 1rem;
  font-size: 0.9rem;
}
.auth-dialog a {
  color: #ff6b6b; /* Matches button color */
  text-decoration: none;
}
.auth-dialog a:hover {
  text-decoration: underline;
}
.auth-dialog .close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  font-size: 1.5rem;
  color: #333;
  text-decoration: none;
  cursor: pointer;
}
  </style>
</head>
<body>
  <!-- Hero Section with Auth Icon -->
  <section class="hero">
    <a href="#" id="auth-icon" class="auth-icon"><i class="fas fa-user"></i></a>
    <h1>Dining, Redefined</h1>
    <p>Scan QR Codes to Order and Pay Instantly</p>
    <button onclick="window.location.href='/download'">Get the App</button>
  </section>

<!-- Auth Modal -->
 <dialog id="auth-modal" class="auth-dialog">
  <article>
    <a href="#" class="close"></a>
    <div id="login-form">
      <h2>Login</h2>
      <form action="/login" method="POST">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
      </form>
      <p>Not a member? <a href="#" id="switch-to-register">Register here</a></p>
    </div>
    <div id="register-form" style="display: none;">
      <h2>Register</h2>
      <form action="/register" method="POST">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Register</button>
      </form>
      <p>Already have an account? <a href="#" id="switch-to-login">Login here</a></p>
    </div>
  </article>
</dialog>

  <!-- Features Section -->
  <section id="features">
    <h2>Key Features</h2>
    <div class="feature-grid">
      <article>
        <i class="fas fa-qrcode fa-3x"></i>
        <h3>Fast QR Scanning</h3>
        <p>Quick and reliable QR code scanning for seamless ordering.</p>
      </article>
      <article>
        <i class="fas fa-table fa-3x"></i>
        <h3>Table Management</h3>
        <p>Efficiently manage table assignments and orders.</p>
      </article>
      <article>
        <i class="fas fa-credit-card fa-3x"></i>
        <h3>Easy Payments</h3>
        <p>Secure and convenient payment options for customers.</p>
      </article>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works">
    <h2>How It Works</h2>
    <div class="steps-grid">
      <article>
        <i class="fas fa-qrcode fa-4x"></i>
        <h3>Scan the Code</h3>
        <p>Use your phone to scan the QR code at your table.</p>
      </article>
      <article>
        <i class="fas fa-utensils fa-4x"></i>
        <h3>Order Your Meal</h3>
        <p>Browse the menu and place your order directly from your device.</p>
      </article>
      <article>
        <i class="fas fa-credit-card fa-4x"></i>
        <h3>Pay and Go</h3>
        <p>Pay securely through the app and enjoy your meal.</p>
      </article>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials">
    <h2>What Our Customers Say</h2>
    <div class="testimonial-grid">
      <article>
        <p>"Order times dropped by 25%, and customers love the convenience!"</p>
        <p><strong>Sarah Lee</strong>, Lee’s Bistro</p>
      </article>
      <article>
        <p>"The upselling feature paid for the app in the first month. Highly recommend!"</p>
        <p><strong>Mark Patel</strong>, Patel’s Grill</p>
      </article>
      <article>
        <p>"Our staff workload decreased, and sales went up—amazing tool!"</p>
        <p><strong>Emma Chen</strong>, Chen’s Noodle House</p>
      </article>
    </div>
  </section>

  <section id="contact-form">
    <h2>Contact Us</h2>
    <p>Have questions? Reach out to us, and we'll get back to you within 24 hours.</p>
    <form id="order-form" action="/submit-request" method="POST">
      <input type="text" name="restaurantName" placeholder="Restaurant Name" required>
      <input type="text" name="contactName" placeholder="Contact Name" required>
      <input type="email" name="email" placeholder="Email" required>
      <input type="tel" name="phone" placeholder="Phone" required>
      <select name="plan">
        <option value="basic">Basic</option>
        <option value="premium">Premium</option>
      </select>
      <textarea name="message" placeholder="Message"></textarea>
      <button type="submit">Submit</button>
    </form>
  </section>


  <!-- Footer -->
  <footer>
    <p>© 2025 QR Menu App. All rights reserved. | <a href="/privacy-policy">Privacy Policy</a> | <a href="#" id="support-link">Support</a></p>
  </footer>

  <!-- JavaScript for Auth Modal -->
  <script>
    const authIcon = document.getElementById('auth-icon');
    const authModal = document.getElementById('auth-modal');
    const authCloseBtn = document.querySelector('#auth-modal .close');
    const switchToRegister = document.getElementById('switch-to-register');
    const switchToLogin = document.getElementById('switch-to-login');
    const loginForm = document.getElementById('login-form');
    const registerForm = document.getElementById('register-form');

    authIcon.addEventListener('click', (e) => {
      e.preventDefault();
      authModal.showModal();
      loginForm.style.display = 'block';
      registerForm.style.display = 'none';
    });

    authCloseBtn.addEventListener('click', (e) => {
      e.preventDefault();
      authModal.close();
    });

    switchToRegister.addEventListener('click', (e) => {
      e.preventDefault();
      loginForm.style.display = 'none';
      registerForm.style.display = 'block';
    });

    switchToLogin.addEventListener('click', (e) => {
      e.preventDefault();
      loginForm.style.display = 'block';
      registerForm.style.display = 'none';
    });
  </script>
</body>
</html>