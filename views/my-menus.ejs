<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <!-- Pico CSS CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Google Fonts: Inter -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      padding: 2rem;
    }
    nav {
      background: #2d3748;
      color: white;
      padding: 1rem;
      border-radius: 0.25rem;
      margin-bottom: 2rem;
    }
    nav a {
      color: white;
      margin-right: 1rem;
    }
    ul {
      list-style: none;
      padding: 0;
      max-width: 800px;
      margin: 0 auto;
    }
    ul li {
      background: #f7fafc;
      padding: 1rem;
      border-radius: 0.25rem;
      margin-bottom: 0.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    ul li a, ul li button {
      margin-left: 1rem;
    }
    ul li button {
      background: #e53e3e;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
      cursor: pointer;
    }
    ul li button:hover {
      background: #c53030;
    }
    footer {
      background: #2d3748;
      color: white;
      padding: 1rem;
      text-align: center;
      margin-top: 2rem;
    }
    footer a {
      color: #a0aec0;
    }
  </style>
</head>
<body>
  <main>
    <h1>My Menus</h1>
    <nav>
      <a href="/my-menus">My Menus</a>
      <a href="/create-menu">Create Menu</a>
      <a href="/profile">Profile</a>
      <a href="/logout">Logout</a>
    </nav>

    <% if (currentUser.restaurantName) { %>
      <p>Restaurant: <%= currentUser.restaurantName %></p>
    <% } %>
    <% if (currentUser.restaurantPhoto) { %>
      <p><img src="<%= currentUser.restaurantPhoto %>" alt="Restaurant Photo" style="max-width: 200px;"></p>
    <% } %>

    <ul>
      <% menus.forEach(menu => { %>
        <li>
          <span>
            <%= menu.title %>
            (<%= menu.categories.map(cat => cat.name).join(', ') %>)
          </span>
          <div>
            <a href="/menu/<%= menu.link %>">View Public Link</a>
            <a href="/edit-menu/<%= menu._id %>">Edit</a>
            <form action="/delete-menu/<%= menu._id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this menu?');">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </main>

  <footer>
    <p>© 2025 QR Menu App. All rights reserved. | <a href="/privacy-policy">Privacy Policy</a> | <a href="#" id="support-link">Support</a></p>
    <dialog id="support-modal">
      <article>
        <a href="#" class="close">×</a>
        <p>For all support issues, please email <a href="mailto:info@qr-table.com">info@qr-table.com</a></p>
      </article>
    </dialog>
  </footer>

  <script>
    const supportLink = document.getElementById('support-link');
    const supportModal = document.getElementById('support-modal');
    const supportCloseBtn = document.querySelector('#support-modal .close');

    supportLink.addEventListener('click', (e) => {
      e.preventDefault();
      supportModal.showModal();
    });

    supportCloseBtn.addEventListener('click', (e) => {
      e.preventDefault();
      supportModal.close();
    });
  </script>
</body>
</html>