<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Google Fonts: Inter -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">
  <style>
    body { font-family: 'Inter', sans-serif; }
    .hero { position: relative; background: linear-gradient(135deg, #008080, #ffffff); padding: 4rem 1rem; text-align: center; color: #333; }
    .hero h1 { font-size: 3rem; font-weight: 700; margin-bottom: 1rem; }
    .hero p { font-size: 1.25rem; margin-bottom: 1rem; }
    .hero img { max-width: 300px; border-radius: 10px; margin-top: 1rem; }
    #menu-public { padding: 4rem 1rem; background: #f9f9f9; text-align: center; }
    .menu-image { text-align: center; margin-bottom: 2rem; }
    .menu-image img { max-width: 300px; border-radius: 10px; }
    .accordion { max-width: 1200px; margin: 0 auto; }
    .category-section { margin-bottom: 1rem; background: white; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); overflow: hidden; }
    .category-header { padding: 1.5rem; cursor: pointer; display: flex; justify-content: space-between; align-items: center; transition: background 0.3s ease; }
    .category-header:hover { background: #f1f1f1; }
    .category-header h2 { font-size: 1.75rem; font-weight: 600; margin: 0; color: #333; }
    .category-header .toggle-icon { font-size: 1.5rem; color: #ff6b6b; transition: transform 0.3s ease; }
    .category-header.active .toggle-icon { transform: rotate(180deg); }
    .menu-items { display: none; padding: 1.5rem; background: #f9f9f9; }
    .menu-items.active { display: block; }
    .menu-card { background: white; padding: 1.5rem; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 1rem; display: flex; align-items: center; gap: 1rem; transition: transform 0.3s ease; }
    .menu-card:hover { transform: translateY(-5px); }
    .menu-card .text-content { flex: 0 1 60%; text-align: left; }
    .menu-card h3 { font-size: 1.5rem; margin-bottom: 0.5rem; color: #333; }
    .menu-card p { font-size: 1rem; color: #666; margin-bottom: 0.5rem; }
    .menu-card img { max-width: 150px; height: auto; border-radius: 10px; order: 2; flex-shrink: 0; }
    .menu-card .price { font-weight: 600; color: #ff6b6b; }
    .menu-card .allergens { color: #e53e3e; font-style: italic; }
    .menu-card button { background: #ff6b6b; color: white; border: none; padding: 0.5rem 1rem; border-radius: 50px; font-size: 1rem; cursor: pointer; transition: background 0.3s ease; }
    .menu-card button:hover { background: #ff8787; }
    #order-summary { max-width: 600px; margin: 2rem auto; padding: 1.5rem; background: white; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); }
    #order-summary h3 { font-size: 1.75rem; margin-bottom: 1rem; }
    #order-items { list-style: none; padding: 0; margin-bottom: 1rem; }
    #order-items li { font-size: 1rem; color: #333; margin-bottom: 0.5rem; }
    #order-summary button { background: #ff6b6b; color: white; border: none; padding: 0.75rem 1.5rem; border-radius: 50px; font-size: 1rem; cursor: pointer; }
    #order-summary button:hover { background: #ff8787; }
    footer { background: #2d3748; color: white; padding: 2rem 1rem; text-align: center; }
    .footer-content { display: flex; justify-content: space-around; align-items: center; flex-wrap: wrap; margin-bottom: 1rem; }
    .social-links a { color: white; margin: 0 0.5rem; font-size: 1.5rem; }
    .contact-info p { margin: 0.5rem 0; }
    footer p { margin-top: 1rem; font-size: 0.9rem; }
    footer a { color: #a0aec0; text-decoration: none; }
    footer a:hover { text-decoration: underline; }
    #support-modal { background: transparent; border: none; }
    #support-modal article { background: #f9f9f9; padding: 2rem; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); max-width: 400px; margin: 0 auto; position: relative; }
    #support-modal .close::after { content: none; }
    #support-modal p { font-size: 1rem; color: #333; }
    #support-modal a { color: #ff6b6b; }
    #support-modal .close { position: absolute; top: 1rem; right: 1rem; font-size: 1.5rem; color: #333; text-decoration: none; cursor: pointer; }
    @media (max-width: 768px) {
      .hero h1 { font-size: 2rem; }
      .hero p { font-size: 1rem; }
      .hero img { max-width: 200px; }
      .category-header h2 { font-size: 1.5rem; }
      .menu-card { flex-direction: column; align-items: flex-start; }
      .menu-card .text-content { flex: 1; }
      .menu-card img { max-width: 120px; order: 0; margin-bottom: 1rem; }
      .menu-image img { max-width: 200px; }
    }
  </style>
</head>
<body>
  <!-- Hero Section -->
  <section class="hero">
    <h1><%= menu.title %></h1>
    <% if (tableId) { %>
      <p>Table: <%= tableNumber %></p>
    <% } %>
    <% if (menu.owner) { %>
      <% if (menu.owner.restaurantName) { %>
        <p><%= menu.owner.restaurantName %></p>
      <% } %>
      <% if (menu.owner.restaurantAddress) { %>
        <p><%= menu.owner.restaurantAddress %></p>
      <% } %>
      <% if (menu.owner.restaurantPhoto) { %>
        <img src="<%= menu.owner.restaurantPhoto %>" alt="Restaurant Photo">
      <% } %>
    <% } %>
  </section>

  <!-- Menu Section -->
  <section id="menu-public">
    <% if (menu.image) { %>
      <div class="menu-image">
        <img src="<%= menu.image %>" alt="Menu Image">
      </div>
    <% } %>
    <div class="accordion">
      <% menu.categories.forEach(category => { %>
        <div class="category-section">
          <div class="category-header">
            <h2><%= category.name %></h2>
            <i class="fas fa-chevron-down toggle-icon"></i>
          </div>
          <div class="menu-items">
            <% category.items.forEach(item => { %>
              <article class="menu-card">
                <div class="text-content">
                  <h3><%= item.name %></h3>
                  <% if (item.ingredients) { %>
                    <p><small>Ingredients: <%= item.ingredients %></small></p>
                  <% } %>
                  <% if (item.allergens) { %>
                    <p class="allergens"><small>Allergens: <%= item.allergens %></small></p>
                  <% } %>
                  <p class="price">$<%= item.price.toFixed(2) %></p>
                  <% if (menu.mode === 'order') { %>
                    <button onclick="addToOrder('<%= item._id %>', '<%= item.name %>', <%= item.price %>)">Add to Order</button>
                  <% } %>
                </div>
                <% if (item.image) { %>
                  <img src="<%= item.image %>" alt="<%= item.name %>">
                <% } %>
              </article>
            <% }) %>
          </div>
        </div>
      <% }) %>
    </div>

    <% if (menu.mode === 'order') { %>
      <div id="order-summary">
        <h3>Your Order</h3>
        <ul id="order-items"></ul>
        <p>Total: $<span id="order-total">0.00</span></p>
        <button onclick="submitOrder()">Order</button>
      </div>
    <% } %>
  </section>

  <!-- Footer -->
  <footer>
    <div class="footer-content">
      <div class="social-links">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-linkedin-in"></i></a>
      </div>
      <div class="contact-info">
        <p><i class="fas fa-envelope"></i> info@qr-table.com</p>
        <p><i class="fas fa-phone"></i> +1 (555) 123-4567</p>
      </div>
    </div>
    <p>© 2025 QR Menu App. All rights reserved. | <a href="/privacy-policy">Privacy Policy</a> | <a href="#" id="support-link">Support</a></p>
  </footer>

  <!-- Support Modal -->
  <dialog id="support-modal">
    <article>
      <a href="#" class="close">×</a>
      <p>For all support issues, please email <a href="mailto:info@qr-table.com">info@qr-table.com</a></p>
    </article>
  </dialog>

  <!-- JavaScript -->
<script>
  const supportLink = document.getElementById('support-link');
  const supportModal = document.getElementById('support-modal');
  const supportCloseBtn = document.querySelector('#support-modal .close');
  const categoryHeaders = document.querySelectorAll('.category-header');

  supportLink.addEventListener('click', (e) => {
    e.preventDefault();
    supportModal.showModal();
  });

  supportCloseBtn.addEventListener('click', (e) => {
    e.preventDefault();
    suportModal.close();
  });

  categoryHeaders.forEach(header => {
    header.addEventListener('click', () => {
      const items = header.nextElementSibling;
      const isActive = items.classList.contains('active');
      document.querySelectorAll('.menu-items').forEach(item => {
        item.classList.remove('active');
        item.previousElementSibling.classList.remove('active');
      });
      if (!isActive) {
        items.classList.add('active');
        header.classList.add('active');
      }
    });
  });

  // Order mode logic
  const isOrderMode = '<%= menu.mode %>' === 'order';
  let order = [];
  let total = 0;

  if (isOrderMode) {
    function addToOrder(itemId, itemName, itemPrice) {
      order.push({ id: itemId, name: itemName, price: itemPrice });
      total += itemPrice;
      const li = document.createElement('li');
      li.textContent = `${itemName} - $${itemPrice.toFixed(2)}`;
      document.getElementById('order-items').appendChild(li);
      document.getElementById('order-total').textContent = total.toFixed(2);
    }
  }

  // Move submitOrder outside the conditional block
  async function submitOrder() {
    const tableId = new URLSearchParams(window.location.search).get('table') || '<%= typeof tableId !== 'undefined' ? tableId : '' %>';
    if (!tableId) {
      alert('Table not found. Please scan the QR code again.');
      return;
    }
    if (!isOrderMode) {
      alert('This menu is not in order mode.');
      return;
    }
    if (order.length === 0) {
      alert('No items in your order.');
      return;
    }
    try {
      const response = await fetch('/orders', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ menuId: '<%= menu._id %>', items: order, tableId })
      });
      if (response.ok) {
        alert('Order submitted successfully!');
        order = [];
        total = 0;
        document.getElementById('order-items').innerHTML = '';
        document.getElementById('order-total').textContent = '0.00';
      } else {
        alert('Failed to submit order.');
      }
    } catch (error) {
      console.error(error);
      alert('An error occurred while submitting your order.');
    }
  }
</script>
</body>
</html>