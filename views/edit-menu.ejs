      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .logout-dialog button:hover {
      background: #ff8787;
    }
    .logout-dialog .close {
      position: absolute;
      top: 1rem;
      right: 1rem;
      font-size: 1.5rem;
      color: #333;
      text-decoration: none;
      cursor: pointer;
    }

    /* Support Modal */
    #support-modal {
      background: transparent;
      border: none;
    }
    #support-modal article {
      background: #f9f9f9;
