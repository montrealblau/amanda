    body {
      font-family: 'Inter', sans-serif;
    }

    /* Hero Section */
    .hero {
      position: relative;
      background: linear-gradient(135deg, #008080, #ffffff);
      padding: 4rem 1rem;
      text-align: center;
      color: #333;
    }
    .hero h1 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    .hero p {
      font-size: 1.25rem;
      margin-bottom: 1rem;
    }
    .user-icon {
      position: absolute;
      top: 1rem;
      right: 1rem;
      color: #333;
      font-size: 1.5rem;
      cursor: pointer;
    }
    nav {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 1rem;
    }
    nav a {
      color: #333;
      font-size: 1.1rem;
      font-weight: 600;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      transition: background 0.3s ease, color 0.3s ease;
    }
    nav a:hover {
      background: #ff6b6b;
      color: white;
    }

    /* Profile Section */
    #profile {
      padding: 4rem 1rem;
      background: #f9f9f9;
      text-align: center;
    }
    #profile h2 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #333;
    }
    .profile-section {
