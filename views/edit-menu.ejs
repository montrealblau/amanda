      cursor: pointer;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }
      .hero p {
        font-size: 1rem;
      }
      .user-icon {
        font-size: 1.2rem;
        top: 0.5rem;
        right: 0.5rem;
      }
      nav {
        flex-direction: column;
        gap: 0.5rem;
      }
      nav a {
        font-size: 1rem;
        padding: 0.5rem;
      }
      .profile-section {
        padding: 1.5rem;
      }
    }
